<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HowAboutIt" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bluegray900_13161f</item>
        <item name="colorPrimaryVariant">@color/bluegray900_13161f</item>
        <item name="colorOnPrimary">@color/bluegray900_13161f</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bluegray900_13161f</item>
        <item name="colorSecondaryVariant">@color/bluegray900_13161f</item>
        <item name="colorOnSecondary">@color/bluegray900_13161f</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bluegray900_13161f</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Background color -->
        <item name="android:windowBackground">@color/bluegray900_13161f</item>
